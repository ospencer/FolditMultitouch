<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
                android:overScrollMode="always"
            android:layout_gravity="fill"

        >

    <TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:layout_gravity="fill">
        <ImageView android:src="@drawable/cgslogo"
            android:layout_height="wrap_content"
    android:paddingBottom="16sp"
            android:id="@+id/cgslogo"
            ></ImageView>

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="22sp"
                android:text="University of Washington"
                android:id="@+id/textView"
                android:gravity="center"
                android:textColor="@color/white"
            android:background="@color/green"
                android:fontFamily="sans-serif-light"
                android:paddingTop="8sp"
            android:paddingBottom="8sp"
                />
        <!--<TextView
            android:textSize="18sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Android Development: Jeff Pyke"
            android:gravity="center"
            android:layout_gravity="center_horizontal|top"
            android:fontFamily="sans-serif-light"
            android:padding="8sp"/>-->
        <TextView
    android:id="@+id/version"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Version: "
            android:gravity="center"
            android:layout_gravity="center_horizontal|top"
            android:fontFamily="sans-serif-light"
           />
        <TextView

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Click the logo to visit the website."
                android:gravity="center"
                android:layout_gravity="center_horizontal|top"
                android:textStyle="italic"
                android:fontFamily="sans-serif-light"
                android:padding="8sp"/>
        <ImageView
        android:src="@drawable/splashlogoborder"
        android:id="@+id/folditlogo"
        android:layout_height="214dip">
        </ImageView>

    </TableLayout>
</ScrollView>