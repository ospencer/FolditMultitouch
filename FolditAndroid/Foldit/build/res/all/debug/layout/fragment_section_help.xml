<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:paddingLeft="@dimen/activity_horizontal_margin"
              android:paddingRight="@dimen/activity_horizontal_margin"
              android:paddingTop="@dimen/activity_vertical_margin"
              android:paddingBottom="@dimen/activity_vertical_margin"
            android:layout_gravity="fill"
        >


    <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:textSize="30sp"
            android:text="How to use Foldit!"
            android:id="@+id/textView"
            android:gravity="center"
            android:layout_gravity="center_horizontal|top"
            android:textColor="@color/white"
            android:textStyle="italic"
            android:padding="8sp"
            android:background="@color/green"/>

    <TextView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@android:id/text1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:textSize="20sp"

    android:text="\n1. Run Foldit on your computer and navigate to social, then click on remote connection. This will open up a listening port on your machine.\n2. Connect this device to the same network as your desktop (at home on the same wireless network for example).\n3. Type in the local IP address that Foldit tells you when you mouseover the remote connection button. Leave the port box blank unless you have set a custom port.\n4. Press connect, you should now see your game on your screen.\n5. Ctrl and Shift toggles are in the upper left corner of the screen. Keystrokes are unimplemented for now.\n6. Happy Folding!"
        />
</LinearLayout><!-- From: C:\Users\jeffpyke\AndroidStudioProjects\FolditProject\Foldit\src\main\res\layout\fragment_section_help.xml -->